#!/bin/sh

# Organization: MDIBL
# Author: Lucie Hutchins
# Date: October 2017
## Script to build and install a new package

cd `dirname $0`

SCRIPT_NAME=`basename $0`
WORKING_DIR=`pwd`

echo "==" 
echo "Install on Server Name: `uname -n`" 
echo "=="
if [ ! -d $PACKAGE_BASE ]
then
   echo "Install directory does not exist. See $PACKAGE_BASE" 
   exit 1
fi
rstatus="SUCCESS"
#Copy the binaries to /opt/software/bin
#
for bin_file on ${FILE_CHECK}
do
    if [ ! -f ${PACKAGE_BASE}/${bin_file} ]
    then
        echo "${PACKAGE_BASE}/${bin_file} missing"
        rstatus="FAILED"
    else
        chmod 755 ${PACKAGE_BASE}/${bin_file}
        cp  ${PACKAGE_BASE}/${bin_file} $SOFTWARE_BASE/bin/
    fi
done
echo "${rstatus}" 
[ "${rstatus}" == FAILED ] && exit 1

exit 0

