
cd ${PACKAGE_BASE}
#Check the install
rstatus="SUCCESS"
for folder in ${DIR_CHECK}
do
    if [ ! -d ${PACKAGE_BASE}/${folder} ]
    then
       echo "${PACKAGE_BASE}/${folder} missing" | tee -a ${LOG_FILE}
       rstatus="FAILED"
     fi
done

if [ "${rstatus}" == FAILED ]
then
   echo "${rstatus}" | tee -a ${LOG_FILE}
   exit 1
fi
echo ${rstatus} | tee -a ${LOG_FILE}
